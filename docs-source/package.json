{
  "name": "slides",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "slides": "vite --config slides/vite.config.js",
    "workbook": "vite --config workbook/vite.config.js",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "docs:slides": "vite build --config slides/vite.config.js --base /slides/ --out-dir ../../docs/slides",
    "docs:workbook": "vite build --config workbook/vite.config.js --base /workbook/ --out-dir ../../docs/workbook",
    "docs": "npm run docs:slides && npm run docs:workbook"
  },
  "dependencies": {
    "@fontsource/fira-code": "^5.1.0",
    "@fontsource/nunito": "^5.1.0",
    "@fontsource/open-sans": "^5.1.0",
    "canvas-confetti": "^1.9.3",
    "highlight.js": "^11.11.0",
    "reveal.js": "^5.1.0"
  },
  "devDependencies": {
    "sass": "1.78.0",
    "vite": "^5.4.11"
  }
}
